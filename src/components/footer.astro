      <img src="/images/Logo_1_grande.png" alt="Ready To Go Logo" class="w-32">
      <ContactusButton />
    </div>
    <div class="flex flex-col items-center gap-4 text-white md:items-start md:text-left md:space-y-10">
      <h3 class="text-lg mb-2 inline-block border-b-2 border-button-border">Site Map</h3>
      <ul class="space-y-2">
        <li><a href="#" class="hover:text-button-border">Home</a></li>
        <li><a href="#" class="hover:text-button-border">Scheduling</a></li>
        <li><a href="#" class="hover:text-button-border">Our Services</a></li>
        <li><a href="#" class="hover:text-button-border">Contact</a></li>
        <li><a href="#" class="hover:text-button-border">FAQ</a></li>
        <li><a href="#" class="hover:text-button-border">Testimonials</a></li>
